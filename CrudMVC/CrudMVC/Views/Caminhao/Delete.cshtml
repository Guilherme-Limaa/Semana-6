@model CaminhaoModel

@{
    ViewData["Title"] = "Apagar caminhão";
}

<div class="text-center">
    <h3>Deseja apagar o caminhão(@Model.Nome)?</h3>
</div>

<a class="btn btn-primary" role="button" asp-controller="Caminhao"  asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger" role="button" asp-controller="Caminhao" asp-route-id ="@Model.Id" asp-action="Deletar">Confirmar exclusão</a>

